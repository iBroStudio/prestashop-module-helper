{
  "name": "ibrostudio/prestashop-module-helper",
  "description": "Useful methods for Prestashop modules.",
  "keywords": [
    "Prestashop",
    "modules",
    "development"
  ],
  "homepage": "https://github.com/iBroStudio/prestashop-module-helper",
  "license": "MIT",
  "authors": [
    {
      "name": "iBroStudio",
      "email": "hello@ibro.studio",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/prompts": "^0.1.24",
    "saloonphp/saloon": "^3.9",
    "symfony/console": "^6.0",
    "symfony/process": "^6.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "laravel/pint": "^1.16",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^2.34"
  },
  "bin": ["bin/presta-generator"],
  "autoload": {
    "psr-4": {
      "IBroStudio\\ModuleHelper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": "vendor/bin/pint",
    "test": "vendor/bin/pest",
    "test-f": "vendor/bin/pest --filter"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
